<Page
    x:Class="FileManager.Views.Comparator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Tag="Comparator">

    <Grid>
        <TextBox x:Name="TextBoxCompare" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="77" Width="341" FontSize="36"  Text="compare files here" Background="{x:Null}" Margin="432,148,0,0"/>
        <Button Content="Upload file 1" Margin="329,288,0,0" VerticalAlignment="Top" Click="upload_file1"/>
        <Button Content="Upload file 2" Margin="784,288,0,0" VerticalAlignment="Top" Click="upload_file2"/>
        <Button Content="Compare" Margin="564,368,0,0" VerticalAlignment="Top" Click="compare_files"/>
        <Button Content="Compare with single thread" Margin="506,478,0,0" VerticalAlignment="Top" Click="Single_Thread_Compare"/>

    </Grid>
</Page>
