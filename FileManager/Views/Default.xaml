<Page
    x:Class="FileManager.Views.Default"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Tag="DefaultView">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <TextBox x:Name="TextBoxDefaultView" IsReadOnly="True" HorizontalAlignment="Center" TextWrapping="Wrap" Text="This is the default page. " VerticalAlignment="Center" Height="400" Width="1000" FontSize="24" TextAlignment="Center"/>
        </Grid>
    </ScrollViewer>
</Page>
