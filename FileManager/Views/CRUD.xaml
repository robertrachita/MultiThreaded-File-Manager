<Page
    x:Class="FileManager.Views.CRUD"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Tag="CRUD">

    <Grid RenderTransformOrigin="0.539,0.531">
        <Button Content="File to copy" Margin="176,121,0,0" VerticalAlignment="Top" Click="filePick"/>
        <Button Content="Destination folder" Margin="156,159,0,0" VerticalAlignment="Top" Click="pickFolder"/>
        <Button x:Name="CopyButton" IsEnabled="True" Content="Copy" Margin="177,233,0,0" VerticalAlignment="Top" Height="61" Width="91" RenderTransformOrigin="0.525,-0.164" Click="CopyButton_Click" />
    </Grid>
</Page>
